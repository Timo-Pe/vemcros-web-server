{% extends 'base.html.twig' %}

{% block title %}Invoices{% endblock %}

{% block body %}
    <h1>Invoices</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Total_amount</th>
                <td>{{ invoice.totalAmount }}</td>
            </tr>
            <tr>
                <th>Invoice_date</th>
                <td>{{ invoice.invoiceDate ? invoice.invoiceDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Due_date</th>
                <td>{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Interest_rate</th>
                <td>{{ invoice.interestRate }}</td>
            </tr>
            <tr>
                <th>Interest_amount</th>
                <td>{{ invoice.interestAmount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ invoice.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_invoices_index') }}">back to list</a>

    <a href="{{ path('app_admin_invoices_edit', {'id': invoice.id}) }}">edit</a>

    {{ include('admin/invoices/_delete_form.html.twig') }}
{% endblock %}
