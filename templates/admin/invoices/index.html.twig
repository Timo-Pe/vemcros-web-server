{% extends 'base.html.twig' %}

{% block title %}Invoices index
{% endblock %}

{% block body %}
	<div data-controller="invoice" class="relative overflow-x-auto shadow-md sm:rounded-lg">
		<div class="flex items-center justify-between flex-column md:flex-row flex-wrap space-y-4 md:space-y-0 p-4 bg-white dark:bg-gray-900">
			<table id="filter-table">
				<thead>
					<tr>
						<th>
							<span class="flex items-center">
								Id
								<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
								</svg>
							</span>
						</th>
						<th>
							<span class="flex items-center">
								Montant Total
								<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
								</svg>
							</span>
						</th>
						<th>
							<span class="flex items-center">
								Montant d'interet
								<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
								</svg>
							</span>
						</th>
						<th>
							<span class="flex items-center">
								Statut
								<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
								</svg>
							</span>
						</th>
						<th>
							<span class="flex items-center">
								Date de la Facture
								<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
								</svg>
							</span>
						</th>
						<th>
							<span class="flex items-center">
								Date d'échéance
								<svg class="w-4 h-4 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 15 4 4 4-4m0-6-4-4-4 4"/>
								</svg>
							</span>
						</th>
					</tr>
				</thead>
			</th>
		</tr>
	</thead>
	<tbody>
		{% for invoice in invoices %}
			<tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
				<th scope="row" class="group flex justify-between px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
					<div>
						{{invoice.id}}
					</div>
					<div>
						<a data-action="click->invoice#openModalViewInvoice" data-id-invoice="{{invoice.id}}" class="btn-details-client transform translate-y-4 opacity-0 duration-300 ease-out group-hover:translate-y-0 transition-all group-hover:opacity-100 cursor-pointer flex w-7 h-7 items-center justify-center text-gray-600 rounded-md p-1 border border-zinc-400 hover:shadow hover:bg-zinc-50">
							<i class="bi bi-three-dots text-xl"></i>
						</a>
					</div>
				</th>
				<td class="px-6 py-4">
					{{invoice.totalAmount}}
				</td>
				<td class="px-6 py-4">
					{{ invoice.interestAmount }}
				</td>
				<td class="px-6 py-4">
					{{ invoice.status }}
				</td>
				<td class="px-6 py-4">
					{{ invoice.invoiceDate ? invoice.invoiceDate|date('Y-m-d H:i:s') : '' }}
				</td>
				<td class="px-6 py-4">
					{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d H:i:s') : '' }}
				</td>
			</tr>
		{% else %}
			<tr class="bg-white border-b w-full p-4 dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">

				<div class="w-full">Aucune facture<div>
					{% endfor %}
				</tr>
			</tr>
		</tbody>
	</tbody>
</table>
<!-- Main modal -->
<div id="modal_view_invoice" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
	<div
		class="relative p-4 w-full max-w-2xl max-h-full">
		<!-- Modal content -->
		<div
			class="relative bg-white rounded-lg shadow dark:bg-gray-700">
			<!-- Modal header -->
			<div class="flex items-center gap-5 justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
				<h3 class="text-3xl font-bold text-gray-900 dark:text-white">
					Facture N°
					<span class="modal_invoice_field" data-field="id">252</span>
					<span data-field="invoice_date" class="modal_invoice_field text-xl font-normal text-zinc-400 dark:text-white">du 14 Mars 1994</span>
				</h3>
				<span data-field="status" class="modal_invoice_field bg-green-100 text-green-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Payée</span>
				<button data-modal-hide="modal_view_invoice" type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
					<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
					</svg>
					<span class="sr-only">Close modal</span>
				</button>
			</div>
			<!-- Modal body -->
			<div id="modal-invoice-body" class="p-4 md:p-5 space-y-4 none flex-col gap-6">
				<div class="flex justify-between">
					<div class="w-3/6 border-r pr-6">
						<h3 id="client_name" class="text-xl mb-3 font-bold text-gray-900 dark:text-white">Details Client</h3>
						<dl class="max-w-md text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700">
							<div class="flex flex-col pb-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Nom</dt>
								<dd data-field="lastname" class="modal_clients_field text-md font-semibold"></dd>
							</div>
							<div class="flex flex-col pb-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Prénom</dt>
								<dd data-field="firstname" class="modal_clients_field text-md font-semibold"></dd>
							</div>
							<div class="flex flex-col pb-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">E-mail</dt>
								<dd data-field="email" class="modal_clients_field text-md font-semibold"></dd>
							</div>
							<div class="flex flex-col py-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Adresse</dt>
								<dd data-field="address" class="modal_clients_field text-md font-semibold"></dd>
							</div>
							<div class="flex flex-col pt-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Téléphone</dt>
								<dd data-field="phone" class="modal_clients_field text-md font-semibold"></dd>
							</div>
						</dl>
					</div>
					<div class="w-3/6 pl-6">
						<h3 id="client_name" class="text-xl mb-3 font-bold text-gray-900 dark:text-white">Details Facture</h3>
						<dl class="max-w-md text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700">
							<div class="flex flex-col pb-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Montant Total</dt>
								<dd class="text-md font-semibold">
									<span data-field="total_amount" class="modal_invoice_field"></span>
									<span>€</span>
								</dd>
							</div>
							<div class="flex flex-col py-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Date d'écheance</dt>
								<dd data-field="due_date" class="modal_invoice_field text-md font-semibold"></dd>
							</div>
							<div class="flex flex-col py-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Taux d'interet</dt>
								<dd class="text-md font-semibold">
									<span data-field="interest_rate" class="modal_invoice_field"></span>
									<span>%</span>
								</dd>
							</div>
							<div class="flex flex-col py-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Montant d'interet</dt>
								<dd class="text-md font-semibold">
									<span data-field="interest_amount" class="modal_invoice_field"></span>
									<span>€</span>
								</dd>
							</div>
							<div class="flex flex-col py-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Nombre de jour restant</dt>
								<dd data-field="remaining_days" class="modal_invoice_field text-md font-semibold"></dd>
							</div>
							<div class="flex flex-col pt-2">
								<dt class="mb-1 text-gray-500 dark:text-gray-400">Prochaine Relance</dt>
								<dd data-field="next_alert" class="modal_invoice_field text-md font-semibold"></dd>
							</div>
						</dl>
					</div>
				</div>
				<div id="accordion-collapse" data-accordion="collapse">
					<h2 id="accordion-collapse-heading-1">
						<button type="button" class="flex items-center justify-between w-full p-5 rounded-t-xl font-medium rtl:text-right text-gray-500 border border-b-0 border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3" data-accordion-target="#accordion-collapse-body-1" aria-expanded="false" aria-controls="accordion-collapse-body-1">
							<div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white">Details des paiements</h3>
								<span class="mb-1 text-gray-400 font-normal dark:text-gray-300">
									<span data-field="modal_nb" class="modal_payments_field">0</span>
									paiement</span>
							</div>
							<svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 10 6">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
							</svg>
						</button>
					</h2>
					<div id="accordion-collapse-body-1" class="hidden" aria-labelledby="accordion-collapse-heading-1">
						<div class="p-5 border border-b-0 border-gray-200 dark:border-gray-700">
							<div class="relative overflow-x-auto border sm:rounded-lg">
								<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
									<thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
										<tr>
											<th scope="col" class="px-6 py-3">
												Montant du paiement
											</th>
											<th scope="col" class="px-6 py-3">
												Date de paiement
											</th>
											<th scope="col" class="px-6 py-3">
												Mode de paiement
											</th>
										</tr>
									</thead>
									<tbody id="modal_payments_body">
										<template id="tmpl_row_payments">
											<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
												<th data-field="paid_amount" scope="row" class="modal_payments_field px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"></th>
												<td data-field="payment_date" class="modal_payments_field px-6 py-4"></td>
												<td data-field="payment_method" class="modal_payments_field px-6 py-4"></td>
											</tr>
										</template>
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<h2 id="accordion-collapse-heading-2">
						<button type="button" class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3" data-accordion-target="#accordion-collapse-body-2" aria-expanded="false" aria-controls="accordion-collapse-body-2">
							<div>
								<h3 class="text-xl font-semibold text-gray-900 dark:text-white">Details des Alertes</h3>
								<span class="mb-1 text-gray-400 font-normal dark:text-gray-300">
									<span data-field="modal_nb" class="modal_alerts_field">0</span>
									relance</span>
							</div>

							<svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 10 6">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
							</svg>
						</button>
					</h2>
					<div id="accordion-collapse-body-2" class="hidden" aria-labelledby="accordion-collapse-heading-2">
						<div class="p-5 border border-t-0 border-gray-200 dark:border-gray-700">
							<div class="relative overflow-x-auto border sm:rounded-lg">
								<table class="w-full text-sm text-left  rtl:text-right text-gray-500 dark:text-gray-400">
									<thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
										<tr>
											<th scope="col" class="px-6 py-3">
												Type d'alertes
											</th>
											<th scope="col" class="px-6 py-3">
												Date d'envoie de l'alerte
											</th>
											<th scope="col" class="px-6 py-3">
												Status de récéption
											</th>
										</tr>
									</thead>
									<tbody id="modal_alerts_body">
										<template id="tmpl_row_alerts">
											<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
												<th data-field="alert_type" scope="row" class="modal_alerts_field px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"></th>
												<td data-field="alert_date" class="modal_alerts_field px-6 py-4"></td>
												<td data-field="status" class="modal_alerts_field px-6 py-4"></td>
											</tr>
										</template>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Modal footer -->
			<div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
				<button data-modal-hide="modal_view_invoice" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Fermer</button>
			</div>
		</div>
	</div>
</div></div></div><a href="{{ path('app_admin_invoices_new') }}">Create new</a></script>{% endblock %}
