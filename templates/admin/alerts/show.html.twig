{% block title %}Alerts{% endblock %}

{% block body %}
    <h1>Alerts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alert.id }}</td>
            </tr>
            <tr>
                <th>Alert_date</th>
                <td>{{ alert.alertDate ? alert.alertDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Alert_type</th>
                <td>{{ alert.alertType }}</td>
            </tr>
            <tr>
                <th>Status</th>
